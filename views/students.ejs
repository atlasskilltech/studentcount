<%- include('partials/header') %>

<!-- Top Bar -->
<div class="top-bar">
  <div>
    <h1>Student Roster</h1>
    <p class="subtitle" id="sub">View student records</p>
  </div>
  <div style="display:flex;gap:10px;align-items:center">
    <button onclick="expCSV()" id="expBtn" style="display:none;padding:10px 20px;font-size:12px;font-weight:600;background:linear-gradient(135deg,#10b981,#059669);color:#fff;border:none;border-radius:10px;cursor:pointer;display:none;align-items:center;gap:6px;box-shadow:0 2px 8px rgba(16,185,129,.25);transition:all .2s">
      <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="vertical-align:-2px"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
      Export CSV
    </button>
    <a href="/" class="clear-btn" style="text-decoration:none;display:inline-flex;align-items:center;gap:4px">
      <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
      Back
    </a>
  </div>
</div>

<!-- Context breadcrumb -->
<div style="padding:16px 32px 0;display:none" id="ctx">
  <div style="display:flex;flex-wrap:wrap;align-items:center;gap:8px">
    <span style="font-size:11px;font-weight:500;padding:5px 14px;border-radius:8px;background:#f1f5f9;border:1px solid #e2e8f0;color:#64748b" id="cS"></span>
    <span class="breadcrumb-sep"><svg width="12" height="12" fill="none" stroke="#cbd5e1" stroke-width="2" viewBox="0 0 24 24"><path d="m9 5 7 7-7 7"/></svg></span>
    <span style="font-size:11px;font-weight:500;padding:5px 14px;border-radius:8px;background:#f1f5f9;border:1px solid #e2e8f0;color:#64748b" id="cP"></span>
    <span class="breadcrumb-sep"><svg width="12" height="12" fill="none" stroke="#cbd5e1" stroke-width="2" viewBox="0 0 24 24"><path d="m9 5 7 7-7 7"/></svg></span>
    <span style="font-size:11px;font-weight:500;padding:5px 14px;border-radius:8px;background:#f1f5f9;border:1px solid #e2e8f0;color:#64748b" id="cC"></span>
    <span class="breadcrumb-sep"><svg width="12" height="12" fill="none" stroke="#cbd5e1" stroke-width="2" viewBox="0 0 24 24"><path d="m9 5 7 7-7 7"/></svg></span>
    <span style="font-size:11px;font-weight:600;padding:5px 14px;border-radius:8px;background:#ecfdf5;border:1px solid #a7f3d0;color:#059669" id="cD"></span>
  </div>
</div>

<!-- Search bar -->
<div style="padding:16px 32px 0;display:none;align-items:center;justify-content:space-between;gap:16px" id="sRow">
  <div style="position:relative;flex:1;max-width:400px">
    <svg width="16" height="16" fill="none" stroke="#94a3b8" stroke-width="2" viewBox="0 0 24 24" style="position:absolute;left:14px;top:50%;transform:translateY(-50%)"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
    <input type="text" id="sInp" placeholder="Search by name, email, roll number..." style="width:100%;background:#fff;border:1px solid #e2e8f0;border-radius:10px;padding:11px 14px 11px 40px;font-size:13px;color:#475569;outline:none;transition:all .2s" onfocus="this.style.borderColor='#10b981';this.style.boxShadow='0 0 0 3px rgba(16,185,129,.12)'" onblur="this.style.borderColor='#e2e8f0';this.style.boxShadow='none'" oninput="filt()">
  </div>
  <div style="display:flex;align-items:center;gap:8px">
    <span class="status-badge active" style="font-size:10px"><span id="cnt">0</span> students</span>
  </div>
</div>

<!-- Content -->
<div style="padding:16px 32px 40px">
  <!-- Placeholder -->
  <div id="ph">
    <div class="empty-state">
      <div class="empty-state-icon">
        <svg width="28" height="28" fill="none" stroke="#cbd5e1" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
      </div>
      <p style="color:#94a3b8;font-size:14px;font-weight:500;margin-bottom:4px">No class selected</p>
      <p style="color:#cbd5e1;font-size:12px;margin-bottom:16px">Select a class from Dashboard or Division view</p>
      <a href="/" style="display:inline-flex;align-items:center;gap:6px;color:#10b981;font-size:13px;font-weight:500;text-decoration:none;padding:8px 16px;border-radius:8px;border:1px solid #a7f3d0;background:#ecfdf5;transition:all .2s" onmouseover="this.style.background='#d1fae5'" onmouseout="this.style.background='#ecfdf5'">
        <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v5a1 1 0 01-1 1H5a1 1 0 01-1-1V5zm10 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 15a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1H5a1 1 0 01-1-1v-4zm10-3a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1h-4a1 1 0 01-1-1v-7z"/></svg>
        Go to Dashboard
      </a>
    </div>
  </div>

  <!-- Table -->
  <div id="tw" style="display:none;background:#fff;border:1px solid #e2e8f0;border-radius:14px;overflow:hidden;box-shadow:0 1px 3px rgba(0,0,0,.04)">
    <div style="overflow-x:auto">
      <table class="tbl">
        <thead>
          <tr>
            <th>#</th>
            <th>Roll No</th>
            <th>Enrollment</th>
            <th>Student Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Division</th>
          </tr>
        </thead>
        <tbody id="tb"></tbody>
      </table>
    </div>
  </div>
</div>

<script>
document.getElementById('nav-students').classList.add('active');let all=[];
async function init(){const p=new URLSearchParams(location.search);const cid=p.get('class_id'),ay=p.get('academic_year_id');if(!cid)return;const sc=p.get('school'),pr=p.get('program'),co=p.get('cohort'),cn=decodeURIComponent(p.get('class_name')||'');if(sc){document.getElementById('cS').textContent=decodeURIComponent(sc);document.getElementById('cP').textContent=decodeURIComponent(pr||'');document.getElementById('cC').textContent=decodeURIComponent(co||'');document.getElementById('cD').textContent=cn;document.getElementById('ctx').style.display='flex';}document.getElementById('sub').textContent='Students in '+cn;document.getElementById('ph').style.display='none';document.getElementById('tw').style.display='block';document.getElementById('sRow').style.display='flex';document.getElementById('expBtn').style.display='inline-flex';
try{const q=ay?'?academic_year_id='+ay:'';const r=await fetch('/api/students/'+cid+q);const d=await r.json();if(d.success){all=d.data;ren(all);}}catch(e){document.getElementById('tb').innerHTML='<tr><td colspan="7" style="padding:40px;text-align:center;color:#ef4444">'+e.message+'</td></tr>';}}
function ren(s){document.getElementById('cnt').textContent=s.length;const tb=document.getElementById('tb');if(!s.length){tb.innerHTML='<tr><td colspan="7" style="padding:40px;text-align:center;color:#94a3b8">No students found</td></tr>';return;}tb.innerHTML=s.map((x,i)=>'<tr class="fade-up" style="animation-delay:'+Math.min(i*20,500)+'ms"><td style="color:#94a3b8;font-size:12px;font-weight:500">'+(i+1)+'</td><td style="font-family:\'SF Mono\',monospace;font-size:12px;color:#64748b">'+(x.student_roll_number||'-')+'</td><td style="font-family:\'SF Mono\',monospace;font-size:12px;color:#64748b">'+(x.student_enrollment_number||'-')+'</td><td style="color:#0f172a;font-weight:500">'+x.student_name+'</td><td style="color:#64748b;font-size:12px">'+(x.student_email||'-')+'</td><td style="color:#64748b;font-size:12px">'+(x.student_mobile||'-')+'</td><td><span style="font-size:10px;font-weight:600;padding:4px 10px;border-radius:6px;background:#f1f5f9;border:1px solid #e2e8f0;color:#64748b">'+(x.st_class_name||'-')+'</span></td></tr>').join('');}
function filt(){const q=document.getElementById('sInp').value.toLowerCase().trim();if(!q){ren(all);return;}ren(all.filter(s=>(s.student_name||'').toLowerCase().includes(q)||(s.student_email||'').toLowerCase().includes(q)||(s.student_roll_number||'').toString().includes(q)||(s.student_enrollment_number||'').toString().includes(q)||(s.student_mobile||'').toString().includes(q)));}
function expCSV(){if(!all.length)return;const h=['#','Roll No','Enrollment','Name','Email','Mobile','Division','Program','School'];const rows=all.map((s,i)=>[i+1,s.student_roll_number||'',s.student_enrollment_number||'',s.student_name,s.student_email||'',s.student_mobile||'',s.st_class_name||'',s.program_name||'',s.school_name||'']);const csv=[h,...rows].map(r=>r.map(c=>'"'+String(c).replace(/"/g,'""')+'"').join(',')).join('\n');const b=new Blob([csv],{type:'text/csv'});const u=URL.createObjectURL(b);const a=document.createElement('a');a.href=u;a.download='students.csv';a.click();URL.revokeObjectURL(u);}
init();
</script>
<%- include('partials/footer') %>
